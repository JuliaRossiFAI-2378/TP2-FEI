				{
					"color": "#6C757D",
					"name": "Accent",
					"slug": "accent"
				}
			],
			"duotone": [
				{
					"colors": ["#212529", "#212529"],
					"slug": "base",
					"name": "Base"
				},
				{
					"colors": ["#fff", "#fff"],
					"slug": "default",
					"name": "Default"
				},
				{
					"colors": ["#343A40", "#343A40"],
					"slug": "primary",
					"name": "Primary"
				},
				{
					"colors": ["#9AA6B2", "#9AA6B2"],
					"slug": "secondary",
					"name": "Secondary"
				},
				{
					"colors": ["#495057", "#495057"],
					"slug": "tertiary",
					"name": "Tertiary"
				},
				{
