					"slug": "accent",
					"name": "Accent"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				":hover": {
					"color": {
						"background": "var:preset|color|tertiary"
					}
				},
				":focus": {
					"color": {
						"background": "var:preset|color|tertiary"
					}
				},
				":active": {
					"color": {
						"background": "var:preset|color|tertiary"
					}
				},
				":visited": {
					"color": {
						"text": "var:preset|color|base"
					}
				}
			},
			"heading": {
				"color": {
					"text": "var:preset|color|primary"
				}
			},

			"link": {
				":active": {
					"color": {
						"text": "var:preset|color|primary"
					}
				}
			}
		},
		"blocks": {
			"core/button": {
				"variations": {
					"outline": {
						"elements": {
							"link": {
								":hover": {
									"border": {
										"color": "var:preset|color|base"
									}
								}
							}
						}
					}
				}
			},
			"core/post-title": {
				"color": {
					"text": "var:preset|color|primary"
				}
			}
		}
	}
}
